4. Median of Two Sorted Arrays

https://leetcode.com/problems/median-of-two-sorted-arrays/submissions/1884542355/

class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        int n=nums1.length;
        int m=nums2.length;
        int[] arr = new int[m+n];
        int k=0; int i=0; int j=0;
        while(i<n && j<m){
            if(nums1[i]<nums2[j]) {
                arr[k]=nums1[i++];
            }
            else {
                arr[k]=nums2[j++];
            }
            k++;
        }

        while(i<n) arr[k++]=nums1[i++];
        while(j<m) arr[k++]=nums2[j++];

        int mid = (m+n) / 2;
        if((m+n)%2==0) return (double) (arr[mid] + arr[mid-1])/2;
        else return (double) arr[mid];

        
    }
}