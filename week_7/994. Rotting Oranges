994. Rotting Oranges

class Solution {
    public int orangesRotting(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        Queue<int[]> qu = new LinkedList<>();
        int fresh = 0;
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (grid[i][j] == 2)
                    qu.add(new int[] { i, j });
                else if (grid[i][j] == 1)
                    fresh++;
            }
        }

        int ans = 0;
        int[][] directions = {{-1, 0}, {1, 0}, {0, -1}, {0, 1}};
        while (!qu.isEmpty()) {
            int size = qu.size();
            for (int k = 0; k < size; k++) {
                int[] indexes = qu.remove();
                int i = indexes[0];
                int j = indexes[1];
                for(int[] dire : directions){
                    int newR = dire[0] + i;
                    int newC = dire[1] + j;
                    if(newR >= 0 && newC >= 0 && newR < m && newC < n && grid[newR][newC] == 1){
                        grid[newR][newC]=2;
                        qu.add(new int[]{newR,newC});
                        fresh--;
                    }
                }
            }
            if(!qu.isEmpty()) ans++;

        }

        if (fresh != 0) return -1;
        return ans;
    }
}
