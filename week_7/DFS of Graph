DFS of Graph


class Solution {
    public ArrayList<Integer> dfs(ArrayList<ArrayList<Integer>> adj) {
        // code here
        ArrayList<Integer> res = new ArrayList<>();
        boolean[] isVisited = new boolean[adj.size()];
        helper(adj,res,0,isVisited);
        return res;
    }
    public void helper(ArrayList<ArrayList<Integer>> adj,ArrayList<Integer> res,int node,boolean[] isVisited){
        if(isVisited[node]) return;
        isVisited[node]=true;
        res.add(node);
        for(int i=0;i<adj.get(node).size();i++){
            int neigh = adj.get(node).get(i);
            if(!isVisited[neigh]){
                helper(adj,res,neigh,isVisited);
            }
        }
    }
}
