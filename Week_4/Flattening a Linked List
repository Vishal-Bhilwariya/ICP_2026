Flattening a Linked List

----
CODE
----

/*
class Node {
    int data;
    Node next;
    Node bottom;

    Node(int x) {
        data = x;
        next = null;
        bottom = null;
    }
}
*/
class Solution {
    public Node flatten(Node root) {
        // code here
        Node temp = root;
        ArrayList<Integer> arr = new ArrayList<>();
        while(temp!=null){
            arr.add(temp.data);
            Node bott = temp.bottom;
            while(bott!=null){
                arr.add(bott.data);
                bott=bott.bottom;
            }
            temp=temp.next;
        }
        Collections.sort(arr);
        
        Node res=  new Node(-1);
        Node a =res;
        for(int i=0;i<arr.size();i++){
            a.bottom = new Node(arr.get(i));
            a=a.bottom;
        }
        return res.bottom;
    }
}